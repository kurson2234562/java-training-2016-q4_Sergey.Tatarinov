<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ua.nure.tatarinov.SummaryTask4.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>ua.nure.tatarinov.SummaryTask4.web.listener.ContextListener</listener-class>
    </listener>


    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.nure.tatarinov.SummaryTask4.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <!--********************************************************************************************************-->
    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>ua.nure.tatarinov.SummaryTask4.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>logoutCommand loginCommand languageCommand forgetPasswordCommand</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>noCommand selectThemeCommand courseCommand </param-value>
        </init-param>
        <init-param>
            <param-name>student</param-name>
            <param-value> </param-value>
        </init-param>
        <init-param>
            <param-name>lecturer</param-name>
            <param-value>selectStudentCommand updateJournalCommand insertInJournalCommand</param-value>
        </init-param>
        <init-param>
            <param-name>admin</param-name>
            <param-value>createLecturerCommand createCourseCommand deleteCourseCommand lockCommand updateCourseCommand updateCourseButtonCommand</param-value>
        </init-param>

    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>
    <!--********************************************************************************************************-->


    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/WEB-INF/jsp/*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>/WEB-INF/jsp/login.jsp</welcome-file>
    </welcome-file-list>

</web-app>